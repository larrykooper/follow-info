<% @page_title = "People I follow" %>

<% content_for :script do %>
  <%= javascript_include_tag "jquery.tablesorter" %>  
  <%= javascript_include_tag "pifs_list" %>
<% end %>

<h1>People I follow - <%= @count %></h1>
Updated:  <%= iflu %><br/><br/>
<table id="myPifs" class="tablesorter">
  <thead>
    <tr>
      <th><u>I Follow Nbr</u></th>
      <th><%=sortable "name" %></th>
      <th><u>Tag(s)</u></th>
      <th><%=sortable "nbr_followers", "Nbr Of Followers" %></th>     
      <th>Follows Me?</th>       
      <th><%=sortable "last_time_tweeted" %></th>
      <th></th>
    </tr>
  </thead>
  
  <%= render(:partial => "ifollow_row", :collection => @users) %> 
</table>
